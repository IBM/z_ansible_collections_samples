{
    "from_playbook": {
        "local_name": "{{ local_name }}",
        "keys": {{ template_dict|tojson }},
        "remote_dir": "{{ dest_dir }}"
    },
    "from_ansible": {
        "current_playbook_hosts": {{ ansible_play_hosts|tojson }},
        "playbook_dir": "{{ playbook_dir }}"
    },
    "from_zos_gather_facts": {
        "master_catalog": "{{ master_catalog_dsn }}",
        "primary_jes": "{{ primary_jes }}"
    }
}